<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="guidocasati.popmoviesapp.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tv_error_message_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/doubleStandard_margin"
        android:text="@string/error_message"
        android:textSize="@dimen/textSizeList"
        android:textAlignment="center"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_no_favs_available_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/doubleStandard_margin"
        android:text="@string/no_favs_available"
        android:textSize="@dimen/textSizeList"
        android:textAlignment="center"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/pb_loading_indicator"
        android:layout_height="@dimen/progressBarHeight"
        android:layout_width="@dimen/progressBarWidth"
        android:layout_gravity="center"
        android:visibility="invisible" />

</FrameLayout>